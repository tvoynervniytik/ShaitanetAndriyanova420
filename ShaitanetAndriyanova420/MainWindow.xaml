<Window x:Class="ShaitanetAndriyanova420.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaitanetAndriyanova420"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="\Resources\Logo.png"
        WindowStyle="None" AllowsTransparency="True"
        MinHeight="1000" MaxHeight="1000"
        MinWidth="1800" MaxWidth="1800"
        Title="Шайтанет" Height="1000" Width="1800">
    <Grid>
        <TextBlock Text="Шайтане"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button x:Name="MinimizeButton" Content="Свернуть" Width="200" Height="50" Click="MinimizeButton_Click"/>
            <Button x:Name="CloseButton" Content="Закрыть" Width="200" Height="50" Margin="10 0" Click="CloseButton_Click"/>
        </StackPanel>
        <Frame x:Name="navFr" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
